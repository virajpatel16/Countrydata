<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Countrydetail">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/countryname"
                style="@style/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="india"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_margin="@dimen/_10sdp"
            android:elevation="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/countryflag"
                    style="@style/Imageback"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@color/design_default_color_on_primary" />

                <TextView
                    android:id="@+id/alphacode"
                    style="@style/textcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16sdp"
                    android:text="IND"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/Capital"
                    style="@style/textcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="New Delhi"
                    android:textSize="@dimen/_16sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvtime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_17sdp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:elevation="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16sdp">

                    <TextView
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Continent :"
                        android:textSize="@dimen/_17sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/regine"
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Asia"
                        android:textSize="@dimen/_17sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp">

                    <TextView
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Capital :"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/capital"
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New delhi"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp">


                    <TextView
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Area :"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/area"
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="454545"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textSize="17dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp">

                    <TextView
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Languages :"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:orientation="horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp">

                    <TextView
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Currency :"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:orientation="horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp">

                    <TextView
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Phone Code: "
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvPhoneCode"
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp">

                    <TextView
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Population:  "
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/population"
                        style="@style/textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45678745"
                        android:textSize="17dp" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/bigFlag"
                    style="@style/Imageback"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:clickable="true"
                    android:elevation="@dimen/_10sdp"
                    android:pointerIcon="arrow"
                    android:src="@color/design_default_color_on_primary"
                    tools:ignore="SpeakableTextPresentCheck" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>
</LinearLayout>